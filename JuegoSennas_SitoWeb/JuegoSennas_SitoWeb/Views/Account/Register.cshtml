@model JuegoSennas_SitoWeb.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Registrarse";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Cree una cuenta nueva.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <!-- Nombre -->
    <div class="form-group">
        @Html.LabelFor(m => m.Nombre, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>
    </div>

    <!-- Apellido -->
    <div class="form-group">
        @Html.LabelFor(m => m.Apellido, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control" })
        </div>
    </div>

    <!-- Email -->
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>

    <!-- Contraseña -->
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>

    <!-- Confirmar contraseña -->
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>

    <!-- Aceptar condiciones de uso -->
    <div class="form-group">
        @Html.CheckBoxFor(m => m.AceptarCondiciones, new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(m => m.AceptarCondiciones, new { @class = "col-md-10 control-label checkbox-aceptarcondiciones" })
        </div>
    </div>

    <!-- Enviar contenido al correo -->
    <div class="form-group">
        @Html.CheckBoxFor(m => m.EnviarContenido, new { @class = "col-md-2" })
        <div class="col-md-10">
            @Html.LabelFor(m => m.EnviarContenido, new { @class = "col-md-10 control-label checkbox-enviarcontenido" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Registrarse" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
